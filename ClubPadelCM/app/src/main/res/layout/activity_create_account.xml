<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.start.CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textInsertSignUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textInsertSignUpName"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertSignUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/insertSignUpName"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textInsertSignUpSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textInsertSignUpSurname"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertSignUpSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/insertSignUpSurname"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textInsertSignUpPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textInsertSignUpPhone"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertSignUpPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/insertSignUpPhone"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textInsertSignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textInsertSignUpEmail"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertSignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/insertSignUpEmail"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textInsertSignUpPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textInsertSignUpPass"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertSignUpPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/insertSignUpPass"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/buttonNewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/success"
            android:drawableLeft="@drawable/ic_check_mark"
            android:text="@string/buttonNewAccount"
            tools:ignore="RtlHardcoded"
            tools:targetApi="lollipop" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>