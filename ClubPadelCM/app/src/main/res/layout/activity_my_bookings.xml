<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyBookingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_reservas_pendiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservas Pendientes" />

        <ListView
            android:id="@+id/list_view_pendiente"
            android:layout_width="match_parent"
            android:layout_height="346dp" />

        <TextView
            android:id="@+id/text_reservas_finalizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservas finalizadas" />

        <ListView
            android:id="@+id/list_view_finalizada"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>