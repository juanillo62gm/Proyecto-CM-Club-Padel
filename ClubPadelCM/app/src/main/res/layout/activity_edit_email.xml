<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.EditEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textOldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textOldEmail"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertOldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/insertOldEmail"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textModifyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textModifyEmail"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertModifiedEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/insertModifiedEmail"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPass"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insertPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/insertPass"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/buttonRequestEditEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/success"
            android:text="@string/buttonRequestEditEmail"
            android:drawableLeft="@drawable/ic_check_mark"
            android:layout_gravity="center"
            tools:targetApi="lollipop"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>