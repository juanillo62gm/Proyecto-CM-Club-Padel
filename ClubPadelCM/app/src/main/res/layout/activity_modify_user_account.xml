<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyUserAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textModifyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <EditText
            android:id="@+id/insertModifiedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textModifySurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/insertModifiedSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textModifyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M칩vil" />

        <EditText
            android:id="@+id/insertModifiedPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="M칩vil"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/buttonStoreNewProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Perfil" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textOldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo antiguo" />

        <EditText
            android:id="@+id/insertOldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo antiguo"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrase침a" />

        <EditText
            android:id="@+id/insertPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contrase침a"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textModifyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo nuevo" />

        <EditText
            android:id="@+id/insertModifiedEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo nuevo"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/buttonRequestEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Email" />

        <Button
            android:id="@+id/buttonRemoveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar cuenta" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>